<h2><%= @cat.persisted? ? "Edit #{@cat.name}" : "New cat" %></h2>
<form action="<%= @cat.persisted? ? "/cats/#{@cat.id}" : "/cats"%>" method="post">
	<input name="_method" type="hidden" value="<%= @cat.persisted? ? "put" : "post"%>" />

  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name" type="text" value="<%= @cat.name %>">
  <br>

  <label for="cat_age">Age</label>
  <input name="cat[age]" id="cat_age" type="number" value="<%= @cat.age %>">
  <br>

  <label>Sex</label>
  <div>
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="m"<%= " checked" if @cat.sex == "m" %>>
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="cat_sex_f" type="radio" value="f"<%= " checked" if @cat.sex == "f" %>>
    <label for="cat_sex_f">Female</label>
  </div>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <option value="brown"<%= " selected" if @cat.color == "brown" %>>brown</option>
    <option value="black"<%= " selected" if @cat.color == "black" %>>black</option>
    <option value="white"<%= " selected" if @cat.color == "white" %>>white</option>
		<option value="grey"<%= " selected" if @cat.color == "grey" %>>grey</option>
  </select>
  <br>

  <label for="cat_birth_date">Birth date</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" value="<%= @cat.birth_date %>"></input>
	<br>

  <input type="submit" value="<%= @cat.persisted? ? "Save changes" : "Build my cat!" %>">
</form>