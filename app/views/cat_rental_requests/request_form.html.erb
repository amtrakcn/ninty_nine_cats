<h2>Rent-a-cat</h2>
<form action="/cat_rental_requests" method="post">
  <label for="cat_id">Cat</label>
  <select name="rental_request[cat_id]">
		<% @cats.each do |cat| %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
		<% end %>
  </select>
  <br>

  <label for="start_date">Start date</label>
  <input name="rental_request[start_date]" id="start_date" type="date"></input>
	<br>

  <label for="end_date">End date</label>
  <input name="rental_request[end_date]" id="end_date" type="date"></input>
	<br>

	<input type='submit' value='Submit'>
</form>